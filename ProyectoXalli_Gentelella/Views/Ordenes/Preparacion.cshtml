
@{
    ViewBag.Title = "Preparacion";
}


<div class="col-md-4 col-sm-4 col-xs-4">
    <div class="x_panel">
        <div class="x_title">
            <h2>Cocina</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li class="pull-right">
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="col-md-4 col-sm-4 col-xs-6">
                <div class="project_detail">
                    <p class="title">Código</p>
                    <p id="codigoOrden" name="@ViewBag.OrdenId"></p>
                </div>
            </div>
            <div class="col-md-4 col-sm-4 col-xs-4">
                <div class="project_detail">
                    <p class="title">Fecha</p>
                    <p id="fecha" name="@ViewBag.role"></p>
                </div>
            </div>

            <div class="col-md-4 col-sm-4 col-xs-4">
                <div class="project_detail">
                    <p class="title">Hora</p>
                    <p id="hora"></p>
                </div>
            </div>

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="project_detail">
                    <p class="title">Mesero</p>
                    <p id="mesero"></p>
                </div>
            </div>
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="project_detail">
                    <p class="title">Cliente</p>
                    <p id="cliente"></p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-8 col-sm-8 col-xs-8">
    <div class="x_panel">
        <div class="x_title">
            <h2>Ordenes realizadas</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li class="pull-right">
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="data">
                <ul class="to_do"></ul>
            </div>

            <div class="ln_solid"></div>
            <div class="">
                <button onclick="saveEntries()" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Scripts/Movimientos/preparacion.js"></script>
}