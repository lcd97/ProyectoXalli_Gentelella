@model ProyectoXalli_Gentelella.Models.UnidadDeMedida

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_content">
            <div data-parsley-validate class="form-horizontal form-label-left">

                <div class="form-group">
                    @Html.Label("Código", htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                    <div class="control-label col-sm-2 col-xs-2">
                        @Html.DisplayFor(model => model.CodigoUnidadMedida, new { htmlAttributes = new { @class = "col-md-7 col-xs-12" } })
                    </div>
                    <div class="control-label col-md-4 col-sm-4 col-xs-4">
                        <label>
                            @Html.CheckBoxFor(model => model.EstadoUnidadMedida, new { @class = "js-switch", @disabled = "disabled" })
                            Estado
                        </label>
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Descripción", htmlAttributes: new { @class = "control-label col-md-3 col-sm-3 col-xs-12" })
                    <div class="control-label col-md-2 col-sm-2 col-xs-2">
                        @Html.DisplayFor(model => model.DescripcionUnidadMedida, new { htmlAttributes = new { @class = "col-md-7 col-xs-12" } })
                    </div>
                </div>

                <div class="ln_solid"></div>
                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-6 col-md-offset-5">
                        <a onclick="CerrarModal()" class="btn btn-primary">Cerrar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    var elemen, init;

    $(document).ready(function () {

        elem = document.querySelector('.js-switch');
        init = new Switchery(elem);
    });

</script>